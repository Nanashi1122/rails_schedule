<%= render "shared/header" %>

<div class="title-container">
    <h3>スケジュール詳細</h3>
</div>

<table>
    <tr>
        <th>タイトル</th>
        <td><%= @schedule.title %></td>
    </tr>

    <tr>
        <th>開始日</th>
        <td><%= @schedule.start_day %></td>
    </tr>

    <tr>
        <th>終了日</th>
        <td><%= @schedule.end_day %></td>
    </tr>

    <tr>
        <th>終日</th>
        <td><%= @schedule.all_day ? '⚪︎' : '' %></td>
    </tr>

    <tr>
        <th>メモ</th>
        <td><%= @schedule.memo %></td>
    </tr>
</table>

<div class="show-bottom">
    <ul>
        <li><%= button_to "編集", {controller: 'schedules',action: 'edit'}, {method: :get} %></li>
        <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
    </ul>
</div>